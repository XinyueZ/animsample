<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		tools:context=".MainActivity"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:paddingBottom="@dimen/activity_vertical_margin">

		<EditText
				android:id="@+id/rotate_me_angle_et"
				android:layout_width="wrap_content"
				android:gravity="right"
				android:layout_height="wrap_content"
				android:hint="Rotate angle"
				android:text="360"
				android:inputType="numberSigned" />

		<EditText
				android:id="@+id/rotate_me_repeat_et"
				android:layout_width="wrap_content"
				android:gravity="right"
				android:layout_height="wrap_content"
				android:hint="Repeat count"
				android:text="2"
				android:inputType="numberSigned" />

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Rotate me"
				android:onClick="rotateMe" />


		<EditText
				android:id="@+id/translation_start_et"
				android:layout_width="wrap_content"
				android:gravity="right"
				android:layout_height="wrap_content"
				android:hint="Change translation start"
				android:text="0"
				android:inputType="numberSigned" />

		<EditText
				android:id="@+id/translation_value_et"
				android:layout_width="wrap_content"
				android:gravity="right"
				android:layout_height="wrap_content"
				android:hint="Translation value"
				android:text="500"
				android:inputType="numberSigned" />

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Change translation"
				android:onClick="changeTranslation" />

		<EditText
				android:id="@+id/scale_start_et"
				android:layout_width="wrap_content"
				android:gravity="right"
				android:layout_height="wrap_content"
				android:hint="Scale at start"
				android:text="0"
				android:inputType="numberSigned" />

		<EditText
				android:id="@+id/scale_value_et"
				android:layout_width="wrap_content"
				android:gravity="right"
				android:layout_height="wrap_content"
				android:hint="Scale"
				android:text="5"
				android:inputType="numberSigned" />

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ScaleX me"
				android:onClick="scaleXme" />

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ScaleY me"
				android:onClick="scaleYme" />

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Scale me"
				android:onClick="scaleMe" />

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Delete"
				android:onClick="clickToRemove" />

	</LinearLayout>
</ScrollView>
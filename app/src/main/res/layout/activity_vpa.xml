<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <LinearLayout
            android:layout_width="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="0dp">

            <requestFocus />
        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate me"
            android:onClick="rotateMe" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate X me"
            android:onClick="rotateXMe" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate Y me"
            android:onClick="rotateYMe" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change translation"
            android:onClick="changeTranslation" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ScaleX me"
            android:onClick="scaleXme" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ScaleY me"
            android:onClick="scaleYme" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale me"
            android:onClick="scaleMe" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:onClick="clickToRemove" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play aplha"
            android:onClick="playAplha" />

    </LinearLayout>
</ScrollView>
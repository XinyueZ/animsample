<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="AnimatedVectorDrawableBinding"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/notice_1"/>

        <ImageView
            android:id="@+id/animated_drawable_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_animated_loading_pb"
            android:contentDescription="@string/notice_1"/>

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/notice_2"/>


        <ImageView
            android:id="@+id/animated_drawable_programmatically_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_animated_google_logo"
            android:contentDescription="@string/notice_2"/>
    </LinearLayout>
</layout>
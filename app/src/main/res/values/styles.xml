<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowAnimationStyle">@style/WindowAnimations</item>
    </style>

    <style name="AppTheme.NoBackground" parent="AppTheme">
        <item name="android:windowBackground">@null</item>
    </style>


    <style name="WindowAnimations" parent="@android:style/Animation.Activity">
        <!-- Activity created in animation (top) -->
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <!-- Activity created out animation -->
        <item name="android:activityOpenExitAnimation">@android:anim/fade_in</item>
        <!-- Activity destroyed in animation -->
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_out</item>
        <!-- Activity destroyed out animation (top) -->
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
